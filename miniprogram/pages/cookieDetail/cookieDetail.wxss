/* pages/cookieDetail/cookieDetail.wxss */
.content{
  padding: var(--app-SIZE-20);
  padding-top: var(--app-SIZE-50);
}
.title{
  font-size: var(--app-SIZE-36);
  font-weight: 700;
}
.desc{
  margin-left: var(--app-SIZE-20);
  line-height: var(--app-SIZE-50);
}
.title::after{
  content: '';
  display: block;
  width: 100%;
  height: 1px;
  margin: var(--app-SIZE-20) 0;
  background-color: #d8dee4;
}
.item{
  line-height: var(--app-SIZE-50);
}
.nostyle{
  font-weight: 700;
  list-style: none;
  margin-top: var(--app-SIZE-20);
  font-style: oblique;
}